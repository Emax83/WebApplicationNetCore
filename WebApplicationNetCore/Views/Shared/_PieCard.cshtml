@model Pie

@{

}


<div class="col-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="@Model.Name" />
        <div class="caption">
            <p>
                @Model.Category.CategoryName
            </p>
            <h3 class="float-right">@string.Format("{0:c2}", Model.Price)</h3>
            <h3>
                @if (Model.IsPieOfTheWeek)
                {
                    <i class="fas fa-star text-warning" title="Pie of the week"></i>
                }
                <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a>
            </h3>
            <p>
                @Model.ShortDescription
            </p>

        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="Shoppingcart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId" >Add to cart</a>
            </p>
        </div>
    </div>
</div>